<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aloy.aloy.Views.LoginActivity">

    <Button
        android:id="@+id/SpotifyConnect"
        android:layout_width="250dp"
        android:layout_height="57dp"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:backgroundTint="@color/spotify_Green"
        android:elevation="0dp"
        android:onClick="onButton2Clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/SpotifyLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="50dp"
        android:src="@drawable/spotify_logo_white"
        app:layout_constraintBottom_toBottomOf="@+id/SpotifyConnect"
        app:layout_constraintEnd_toEndOf="@+id/SpotifyConnect"
        app:layout_constraintStart_toStartOf="@+id/SpotifyConnect"
        app:layout_constraintTop_toTopOf="@+id/SpotifyConnect"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/AloyLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/AppLogo"
        android:src="@drawable/aloy_transparent2x"
        app:layout_constraintBottom_toTopOf="@+id/SpotifyConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

